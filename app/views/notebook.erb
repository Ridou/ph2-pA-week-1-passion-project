<style>
body {
  background-image: url("../assets/notebook.jpg");
  background-repeat: no-repeat;
  background-size: cover;
}
</style>
<div id="notebook_wrapper">
  <div id="notebook_desk">
    <div id="main_note" contenteditable="true">
      p Title
      <h1 class='title'><%= @notes1.title %></h1>
      p Description
      <p class='description'><%= @notes1.description %>
      p Content
        <p class='content'><%= @notes1.content %></p>
        <ul>
          <li><%=User.find(@notes1.user_id).username%></li>
          <li><%=prettify(@notes1.created_at.to_s)%></li>
        </ul>
      </div> 
      <!-- new note -->
      <div id="new_note">
        <button type="submit">New Note</button>
      </div>
      <!-- create -->
      <div id="create">
        <a href="/users/<%=@notes2.user_id%>/notebook/new">
          <!-- <img src="/../public/assets/pencil.png"/>  -->Create</a>
      </div>
      <!-- edit note  -->
      <div id="edit">
        <a href="/users/<%=@notes1.user_id%>/notebook/<%= @notes1.id %>/edit"> Save </a>
      </div>
      <!-- delete note -->
      <div id="delete">
        <a href="/users/<%=@notes1.user_id%>/notebook/<%=@notes1.id%>/delete"> Delete </a>
      </div>
    </div>
  </div>

  <div id="notebook_container">
      <!-- Page Left -->
    <!-- PAGE 2 -->
