      <ul>
        <li><%=User.find(@notes2.user_id).username%></li>
        <li><%=prettify(@notes2.created_at.to_s)%></li>
      </ul>
    </div>
    <!-- MAIN PAGE -->
    <div id="center_note">
      p Title
      <h1><%= @notes1.title %></h1>
      p Description
      <p><%= @notes1.description %>
      p Content
      <p><%= @notes1.content %></p>
      <ul>
        <li><%=User.find(@notes1.user_id).username%></li>
        <li><%=prettify(@notes1.created_at.to_s)%></li>
      </ul>
    </div>
    <!-- PAGE 3 -->
    <div id="right_note">
      p Title
      <h1><%= @notes3.title %></h1>
      <p><%= @notes3.description %>
      p Description
      <p><%= @notes3.content %></p>
      p Content
        <ul>
          <li><%=User.find(@notes3.user_id).username%></li>
          <li><%=prettify(@notes3.created_at.to_s)%></li>
        </ul>
    </div>      
        <!-- Page Right -->
    <div id="page_right">
    </div>
  </div>
